{
    "name": "thomasvargiu/tmv-whatsapi",
    "description": "Full OOP library to communicate with WhatsApp service",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "whatsapp",
        "whatsapi",
        "sms"
    ],
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Thomas Vargiu",
            "email": "tommy@ttech.it",
            "homepage": "http://thomasvargiu.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Tmv\\WhatsApi\\": ["src/", "tests/unit/"]
        }
    },
    "require": {
        "php": ">=5.4",
        "ext-curl": "*",
        "zendframework/zend-eventmanager": "~2.0",
        "zendframework/zend-stdlib": "~2.0"
    },
    "suggest": {
        "ext-gd": "Allows icon generation for images",
        "php-ffmpeg/php-ffmpeg": "Allows icon generation for videos"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable",
        "mockery/mockery": "@stable",
        "phpmd/phpmd" : "@stable",
        "squizlabs/php_codesniffer": "1.*",
        "fabpot/php-cs-fixer": "0.*@dev",
        "satooshi/php-coveralls": "dev-master",
        "php-ffmpeg/php-ffmpeg": "0.5.*"
    }
}